page { background: #f7f7f7; color: #222; font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Helvetica, Arial, sans-serif; }
.container { padding: 16px; }
.card { background: #ffffff; border-radius: 10px; padding: 12px; margin-bottom: 12px; box-shadow: 0 2px 6px rgba(0,0,0,0.06); }
.title { font-size: 16px; font-weight: 600; }
.muted { color: #888; font-size: 12px; }
.btn { background: #1f1f1f; color: #fff; padding: 8px 12px; border-radius: 6px; display: inline-block; }
.input { background: #fff; border-radius: 8px; padding: 8px 10px; }
